# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/vision-aid

# Redis Cache
REDIS_URL=redis://localhost:6379

# JWT Authentication
# CRITICAL: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be at least 32 characters, never use default values in production
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET_MIN_32_CHARS

# Session Secret (Different from JWT_SECRET!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=REPLACE_WITH_DIFFERENT_GENERATED_SECRET_MIN_32_CHARS

# YOLO Service
YOLO_SERVICE_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Email Configuration (for verification & password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Logging
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# File Upload Limits
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 15 * 60 * 1000
RATE_LIMIT_MAX=100
# Max requests per window

DETECTION_RATE_LIMIT_WINDOW_MS=60000
# 1 minute
DETECTION_RATE_LIMIT_MAX=10
# Max detections per minute

# Cache Duration (in seconds)
CACHE_DURATION=300
# 5 minutes

# Security
BCRYPT_ROUNDS=10
# Password hashing complexity

# Session
SESSION_TIMEOUT=86400000
# 24 hours in milliseconds
